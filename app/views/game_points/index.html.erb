<p style="color: green"><%= notice %></p>
<div class="container-fluid">

<h1>Game points</h1>
<%= link_to "New game point", new_game_point_path, class: "btn btn-outline-primary" %>
<br><br>
<table class="table table-success table-striped table-hover" style="text-align: center;">
  <thead>
    <tr>
    <th>ID</th>
    <th>Title</th>
    <th>Image</th>
    <th>Link</th>
    <th>Game_amount</th>
    <th>Edit</th>
    <th>Delete</th>
    </tr>
  </thead>

  <% @game_points.each_with_index do |game_point,index| %>
  <tr>
    <td><%= index+1 %></td>
    <%= render game_point %>
    <!-- <td>
      <%= link_to "Show this game point", game_point, class: "btn btn-info" %>
    </td> -->
    <td>
      <%= link_to "Edit this game point", edit_game_point_path(game_point), class: "btn btn-warning" %>    
    </td>
    <td>
      <%= button_to "Destroy this game point", game_point, method: :delete, class: "btn btn-danger" %>
    </td>
  </tr>
  <% end %>
</div>

</table>

